    <script>
        // This script shows the form when a package button is clicked.
        function showForm(packageName, packagePrice) {
            const formWrapper = document.getElementById('form-wrapper');
            
            // Set the hidden input values for the form submission
            document.getElementById('package-input').value = packageName;
            document.getElementById('price-input').value = packagePrice;
            
            // Update the display text for the user
            document.getElementById('selected-package-name').textContent = packageName;

            // Make the form visible and scroll to it
            formWrapper.classList.remove('hidden');
            formWrapper.scrollIntoView({ behavior: 'smooth', block: 'center' });
        }
    </script>

